        <!--android:layout_height="50dp"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginTop="25dp"-->
        <!--android:layout_below="@id/bt_register"-->
        <!--android:text="START"-->
        <!--android:textSize="25dp"/>-->

</RelativeLayout>